<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/title_text"
            android:text="@string/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            style="@style/TitleStyle" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="PARKING 1"
            android:layout_width="111dp"
            android:layout_height="140dp" android:id="@+id/p1_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/title_text"
    />
    <Button
            android:text="PARKING 2"
            android:layout_width="111dp"
            android:layout_height="140dp" android:id="@+id/p2_button"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text" app:layout_constraintStart_toEndOf="@+id/p1_button"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/p3_button"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="PARKING 3"
            android:layout_width="111dp"
            android:layout_height="140dp" android:id="@+id/p3_button"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_edit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/p2_button" app:layout_constraintHorizontal_bias="0.0"
            android:hint="@string/what_is_your_name"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/license_edit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/name_edit" app:layout_constraintHorizontal_bias="0.0"
            android:hint="@string/what_is_your_license"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ brand_edit"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/license_edit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintHorizontal_bias="0.0"
            android:hint="@string/what_is_your_brand"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/parking_view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:textColor="@android:color/black" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/p2_button" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/name_edit" android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.6"/>
</androidx.constraintlayout.widget.ConstraintLayout>

